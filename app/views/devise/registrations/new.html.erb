<div class="account_page_all">

    <div class="bottom-bar"></div>

  <%= form_with model: @user, url: user_registration_path, class: "registration", local: true do |f| %>
    
  <div class="account_page">
    <div class="account_left">
      <h1>Create Account</h1>
      <h2>新規アカウント作成</h2>
      <%= render "devise/shared/error_messages", model: f.object %>
    </div>
    
    <div class="account_right">
      <div class="form_entire">
        <div class="form_text_group">
          <span class="indispensale">必須</span>
          <div class="form_text">Nickname</div>
        </div>
        <%= f.text_field :nickname, class:"input_field", id:"nickname", placeholder:"例)Enneagramタロウ", maxlength:"20" %>
      </div>
      <div class="form_entire">
        <div class="form_text_group">
          <span class="indispensale">必須</span>
          <div class="form_text">Email</div>
        </div>
        <%= f.email_field :email, class:"input_field", id:"email", placeholder:"PC・携帯どちらでもOK", autofocus: true %>
      </div>
      <div class="form_entire">
        <div class="form_text_group">
          <span class="indispensale">必須</span>
          <div class="form_text">Password</div>
        </div>
        <%= f.password_field :password, class:"input_field", id:"password", placeholder:"6文字以上の半角数字" %>
        <p class="info-text">*英字と数字の両方を含めて設定してください。</p>
      </div>
      <div class="form_entire">
        <div class="form_text_group">
          <span class="indispensale">必須</span>
          <div class="form_text">Password(確認)</div>
        </div>
        <%= f.password_field :password_confirmation, class:"input_field", id:"password_confirmation", placeholder:"同じパスワードを入力してください" %>
      </div>
      <div class="form_entire">
        <div class="form_text_group">
          <span class="indispensale">必須</span>
          <div class="form_text">Name(全角)</div>
        </div>
        <%= f.text_field :first_name, class:"input_field_name", id:"first-name", placeholder:"例)山田" %>
        <%= f.text_field :last_name, class:"input_field_name", id:"last-name", placeholder:"例)太郎" %>
      </div>
      <div class="form_entire">
        <div class="form_text_group">
          <span class="indispensale">必須</span>
          <div class="form_text">Birthday</div>
        </div>
        <div class="input_field-birthday">
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
      <div class="form_entire">
        <%= f.submit "Create", class:"register_btn" %>
      </div>
      <% end %>
    </div>


    <%= render "devise/shared/links" %>


  </div>

  <div class="bottom-bar"></div>
</div>
