
<%= form_with model: @user, url: user_registration_path, class: "registration", local: true do |f| %>
  <h1>会員情報入力</h1>
  <%= render "devise/shared/error_messages", model: f.object %>
  <div class="form-entire">
    <div class="form-text-group">
      <div class="form-text">ニックネーム</div>
      <span class="indispensale">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-field", id:"nickname", placeholder:"例)Enneagramタロウ", maxlength:"20" %>
  </div>
  <div class="form-entire">
    <div class="form-text-group">
      <div class="form-text">メールアドレス</div>
      <span class="indispensale">必須</span>
    </div>
    <%= f.text_area :email, class:"input-field", id:"email", placeholder:"PC・携帯どちらでもOK", autofocus: true %>
  </div>
  <div class="form-entire">
    <div class="form-text-group">
      <div class="form-text">パスワード</div>
      <span class="indispensale">必須</span>
    </div>
    <%= f.password_field :password, class:"input-field", id:"password", placeholder:"6文字以上の半角数字" %>
    <p class="info-text">*英字と数字の両方を含めて設定してください。</p>
  </div>
  <div class="form-entire">
    <div class="form-text-group">
      <div class="form-text">パスワード(確認)</div>
      <span class="indispensale">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-field", id:"password_confirmation", placeholder:"同じパスワードを入力してください" %>
  </div>
  <div class="form-entire">
    <div class="form-text-group">
      <div class="form-text">お名前(全角)</div>
      <span class="indispensale">必須</span>
    </div>
    <%= f.text_area :first_name, class:"input-field", id:"first-name", placeholder:"例)山田" %>
    <%= f.text_area :last_name, class:"input-field", id:"last-name", placeholder:"例)太郎" %>
  </div>
  <div class="form-entire">
    <div class="form-text-group">
      <div class="form-text">生年月日</div>
      <span class="indispensale">必須</span>
    </div>
    <div class="input-field-birthday">
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class="register-btn">
    <%= f.submit "会員登録", class:"register-btn" %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
