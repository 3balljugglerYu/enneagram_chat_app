<div class="message">
  <div class="upper_message">
    <div class="message_user">
      <%= message.user.nickname %>
      <span>[タイプ:</span>
        <%= message.user.enneagram_type&.type_result.name %>]
    </div>
    <div class="message_date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower_message">
    <div class="message_content">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: "500 x 500"), class: "message_image" if message.image.attached? %>
  </div>
</div>